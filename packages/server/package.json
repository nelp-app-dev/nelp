{
  "name": "@nelp/server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/nelp/test/jest-e2e.json"
  },
  "dependencies": {
    "@mikro-orm/cli": "^4.5.5",
    "@mikro-orm/core": "^4.5.5",
    "@mikro-orm/migrations": "^4.5.5",
    "@mikro-orm/nestjs": "^4.2.0",
    "@mikro-orm/postgresql": "^4.5.5",
    "@mikro-orm/reflection": "^4.5.5",
    "@nestjs-modules/ioredis": "^1.0.0",
    "@nestjs/common": "^7.6.15",
    "@nestjs/core": "^7.6.15",
    "@nestjs/microservices": "^7.6.15",
    "@nestjs/platform-express": "^7.6.15",
    "@nestjs/swagger": "^4.8.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "connect-redis": "^5.2.0",
    "express-session": "^1.17.1",
    "ioredis": "^4.27.2",
    "lodash": "^4.17.21",
    "nestjs-redis": "^1.3.3",
    "nestjs-session": "^1.0.1",
    "pg": "^8.6.0",
    "pg-camelcase": "^0.0.3",
    "react-masonry-css": "^1.0.16",
    "redis": "^3.1.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.6",
    "slugify": "^1.5.3",
    "stripe": "^8.148.0",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.0",
    "@nestjs/testing": "^7.6.15",
    "@types/connect-redis": "^0.0.16",
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.3",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.36",
    "@types/pg": "^7.14.11",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.0.18",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/libs/",
      "<rootDir>/apps/"
    ],
    "moduleNameMapper": {
      "@nelp/entities/(.*)": "<rootDir>/libs/entities/src/$1",
      "@nelp/entities": "<rootDir>/libs/entities/src",
      "@nelp/base/(.*)": "<rootDir>/libs/base/src/$1",
      "@nelp/base": "<rootDir>/libs/base/src",
      "@nelp/dtos/(.*)": "<rootDir>/libs/dtos/src/$1",
      "@nelp/dtos": "<rootDir>/libs/dtos/src",
      "@nelp/config/(.*)": "<rootDir>/libs/config/src/$1",
      "@nelp/config": "<rootDir>/libs/config/src",
      "@nelp/interceptors/(.*)": "<rootDir>/libs/interceptors/src/$1",
      "@nelp/interceptors": "<rootDir>/libs/interceptors/src",
      "@nelp/filters/(.*)": "<rootDir>/libs/filters/src/$1",
      "@nelp/filters": "<rootDir>/libs/filters/src",
      "@nelp/databases/(.*)": "<rootDir>/libs/databases/src/$1",
      "@nelp/databases": "<rootDir>/libs/databases/src"
    }
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./apps/catalog/src/mikro-orm.config.ts"
    ]
  }
}
